<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>SessionManager</filter-name>
        <filter-class>com.erezbiox1.SessionManager</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SessionManager</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.erezbiox1.admin.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.erezbiox1.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern> </url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>com.erezbiox1.servlets.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Trips</servlet-name>
        <servlet-class>com.erezbiox1.servlets.TripsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Trips</servlet-name>
        <url-pattern>/trips</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Photo</servlet-name>
        <servlet-class>com.erezbiox1.servlets.PhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Photo</servlet-name>
        <url-pattern>/p/*</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Trip</servlet-name>
        <servlet-class>com.erezbiox1.servlets.TripServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Trip</servlet-name>
        <url-pattern>/t/*</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <!--              ADMIN                 -->
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.erezbiox1.admin.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.erezbiox1.admin.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/admin/register</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.erezbiox1.admin.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
    <!--////////////////////////////////////-->
    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>com.erezbiox1.admin.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <!--////////////////////////////////////-->
</web-app>